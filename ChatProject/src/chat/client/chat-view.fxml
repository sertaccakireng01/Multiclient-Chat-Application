<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:controller="chat.client.ChatController" minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   
   <center>
      <TextArea fx:id="messageArea" editable="false" wrapText="true" BorderPane.alignment="CENTER" 
                style="-fx-font-size: 14px;" />
   </center>
   
   <right>
      <VBox spacing="5" prefWidth="170.0"> 
         <padding>
            <Insets top="5" right="10" bottom="5" left="5" />
         </padding>
         <Label text="Bağlı İstemciler" style="-fx-font-size: 13px; -fx-font-weight: bold;" />
         <ListView fx:id="userListView" style="-fx-font-size: 13px;" />
      </VBox>
   </right>
   
   <bottom>
      <HBox spacing="5" alignment="CENTER_LEFT">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         <children>
            <TextField fx:id="messageField" onAction="#handleSendAction" 
                       promptText="Alıcıyı listeden seçin, mesajı yazın..." 
                       HBox.hgrow="ALWAYS" 
                       prefHeight="35.0" 
                       style="-fx-font-size: 14px;" />
            <Button fx:id="sendButton" onAction="#handleSendAction" text="Gönder" 
                    prefHeight="35.0" 
                    style="-fx-font-size: 14px; -fx-font-weight: bold;" />
         </children>
      </HBox>
   </bottom>
   
</BorderPane>