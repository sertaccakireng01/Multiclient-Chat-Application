<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?> <VBox fx:controller="chat.server.ServerController" spacing="10" 
      minWidth="450.0" minHeight="400.0" 
      prefWidth="450.0" prefHeight="400.0" 
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <GridPane hgap="10" vgap="10">
        <children>
            <Label text="Sunucu Port Numarası:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-size: 13px;" />
            
            <TextField fx:id="portField" promptText="örn: 12000" prefWidth="150.0" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0" 
                       style="-fx-font-size: 13px;" />
            
            <Button fx:id="startButton" onAction="#handleStartServer" text="Sunucuyu Başlat" 
                    GridPane.columnIndex="1" GridPane.rowIndex="1" 
                    style="-fx-font-size: 13px; -fx-font-weight: bold;" />
        </children>
    </GridPane>
    
    <Label text="Sunucu Logları:" style="-fx-font-size: 13px; -fx-font-weight: bold;" />
    
    <TextArea fx:id="logArea" editable="false" wrapText="true" 
              style="-fx-font-size: 14px;" 
              VBox.vgrow="ALWAYS" /> </VBox>